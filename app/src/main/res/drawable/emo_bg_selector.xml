<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- active -->
    <item android:drawable="@drawable/emo_bg_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />

    <!-- inactive-->
    <item android:drawable="@drawable/emo_bg_unselected" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />

    <!--  pressed -->
    <item android:drawable="@drawable/emo_bg_focused" android:state_pressed="true" />

    <!-- selected using dpad-->
    <item android:drawable="@drawable/emo_bg_focused" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>

</selector>